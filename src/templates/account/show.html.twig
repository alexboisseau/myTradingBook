                    </div>
                {% else %}
                    <div class="badge badge-danger ">
                        <i class="fas fa-wallet mr-2"></i>
                        B√©n√©fice total : {{user.userProfit}} &euro;
                    </div>
                {% endif %}
            </div>
            <div class="row mt-3 ml-1" style="font-size: 20px;">
                <div class="badge badge-success ">
                    <i class="fas fa-book mr-2"></i>
                    Nombre de cahiers : {{user.booksUser|length}}
                </div>
            </div>
            <div class="row mt-3">
                <div class="col">
                    <p class="my-2" style="font-size: 25px;">Description : </p>
                    {{user.description | raw}}
                </div>
            </div>
        </div>
    </div>
{% endblock %}