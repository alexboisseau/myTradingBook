{% extends "base.html.twig" %}

{% block title %}
    Mon compte
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5 text-center">Mon compte üßë‚Äçüíª</h1>
        <div class="alert alert-light">
            <div class="row">
                <div class="col">
                    <img src="{{ user.picture }}" alt="Avatar de {{user.fullName}}" class="avatar avatar-medium">
                    <span class="mx-2" style="font-size: 25px;">{{user.fullName}}</span>
                </div>
            </div>
            <div class="row mt-3 ml-1" style="font-size: 20px;">
                {% if user.userProfit > 0 %}
                    <div class="badge badge-success ">
                        <i class="fas fa-wallet mr-2"></i>
