{% extends 'base.html.twig' %}

{% block title %}
    Mes cahiers
{% endblock %}

{% block body %}
    
    <div class="container">
        <h1 class="text-center my-4">Mes cahiers de trading ðŸ“ˆ</h1>

        <a href="{{ path('book_new') }}" class="btn btn-primary">
            <i class="fas fa-plus mr-1"></i>
