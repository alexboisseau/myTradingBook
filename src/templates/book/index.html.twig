                                <i class="fas fa-wallet mr-2"></i>
                                BÃ©nÃ©fice total : {{book.bookProfit}} &euro;
                            </div>
                        {% endif %}
                    </div>
                    <div class="col-md-3">
                        <p class="text-center">CrÃ©e le {{book.bookDate | date('d/m/Y')}}</p>
                    </div>
            </div>
            {% endfor %}

        {% else %}
            <h2 class="text-center">Vous n'avez pas de cahier !</h2>
        {% endif %}

    </div>

{% endblock %}