{% extends "admin/base.html.twig" %}

{% block title %}
    Utilisateurs
{% endblock %}

{% block body %}
    <h1 class="my-5 text-center">Gestion des utilisateurs</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Email</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}            
                <tr>
                    <td> {{user.id}} </td>
                    <td class="d-flex"> 
                        <img src="{{user.picture}}" alt="" class="avatar avatar-mini mr-2">
                        {{user.lastName}} 
                    </td>
                    <td> {{user.firstName}} </td>
                    <td> {{user.email}} </td>
                    <td> {{user.description | raw}} </td>
                    <td>
                        <a href="{{ path('delete_user', {'id': user.id}) }}" class="btn btn-danger d-flex justify-content-center">
                            <i class="fas fa-trash mt-1 mr-1"></i>
                            <span class="">Supprimer</span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}